---
title: Dashboard
---
<div ng-controller="DashboardCtrl">
  <div class="page-header">
    <h1><%= current_page.data.title %></h1>
  </div>

  <div class="row" ng-if="!loaded">
    <h4>Loading...</h4>
  </div>

  <div class="row" ng-if="loaded">
    <div class="span12">
      <div class="welcome" ng-show="currentUser.name && currentUser.name.length > 0">
        <h2>Welcome, {{currentUser.name}}!</h2>
      </div>

      <div class="stats-section">
        <div class="row">
          <div class="span6">
            <h3>Overall Statistics</h3>
            <div class="row-fluid">
              <span class="span8">
                <strong>Number of Tomatoes:</strong>
              </span>
              <span class="span4">
                {{tomatoes.length}}
              </span>
            </div>
            <div class="row-fluid">
              <span class="span8">
                <strong>Tomatoes Completed:</strong>
              </span>
              <span class="span4">
                {{completedTomatoes.length}}
              </span>
            </div>
          </div>
          <div class="span6">
            <div class="last-tomato">
              <h3>Last Tomato</h3>
              <div ng-hide="lastTomato">
                <h4>No tomatoes yet</h4>
              </div>
              <div ng-if="lastTomato">
                <div class="row-fluid">
                  <span class="span6">
                    <strong>Plan Time: </strong>
                  </span>
                  <span class="span6">
                    {{toString(lastTomato.planTime)}}
                  </span>
                </div>
                <div class="row-fluid">
                  <span class="span6">
                    <strong>Work Time: </strong>
                  </span>
                  <span class="span6">
                    {{toString(lastTomato.workTime)}}
                  </span>
                </div>
                <div class="row-fluid">
                  <span class="span6">
                    <strong>Break Time: </strong>
                  </span>
                  <span class="span6">
                    {{toString(lastTomato.breakTime)}}
                  </span>
                </div>
                <div class="row-fluid">
                  <span class="span6">
                    <strong>Completed: </strong>
                  </span>
                  <span class="span6">
                    {{lastTomato.completed ? "Yes" : "No"}}
                  </span>
                </div>
                <div class="row-fluid">
                  <span class="span6">
                    <strong>Tasks: </strong>
                  </span>
                  <span class="span6">
                    {{taskList(lastTomato)}}
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="span4 offset4">
          <a class="btn btn-primary text-center" href="tomato.html">
            Start New Tomato!
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
