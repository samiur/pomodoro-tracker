---
title: Home
---
<div ng-controller="HomeCtrl">
  <div class="page-header">
    <h1><%= current_page.data.title %></h1>
  </div>

  <form class="form-horizontal" ng-submit="signIn()">
    <alert ng-repeat="alert in alerts" type="alert.type" close="closeAlert($index)">{{alert.msg}}</alert>
    <div class="control-group">
      <label class="control-label" for="inputEmail">Email</label>
      <div class="controls">
        <input type="text" id="inputEmail" placeholder="Email" ng-model="email">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="inputPassword">Password</label>
      <div class="controls">
        <input type="password" id="inputPassword" placeholder="Password" ng-model="password">
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <label class="checkbox">
          <input class="ngCheckbox" type="checkbox" ng-model="remember" value="false"> Remember me
        </label>
        <button type="submit" class="btn" id="submit">Sign in</button>
      </div>
    </div>
  </form>
  <div>Remember: {{remember}}</div>
</div>
